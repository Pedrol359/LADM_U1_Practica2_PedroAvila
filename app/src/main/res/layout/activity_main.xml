<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F2212729"

    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="146dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/binance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Binance"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/logo"
        android:textColor="#767A79"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compra y venta de Criptomonedas"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/logo"
        android:id="@+id/txt1"
        android:textColor="#767A79"
        />

    <Button
        android:id="@+id/btncomprar"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="Comprar"
        app:rippleColor="#000000" />

    <Button
        android:id="@+id/vender"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btncomprar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Vender"
        app:rippleColor="#000000" />
    <Button
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:id="@+id/mercado"
        android:text="Consultar Estadisticas"
        android:layout_below="@+id/vender"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:rippleColor="#000000"
        />
</RelativeLayout>